@import "./wxCard/wxCard.wxss";
@import "./bankCard/bankCard.wxss";
.shadow-line{
  width: 100%;
  box-shadow: 0px 2px 2px rgba(0,0,0,0.05);
  height: 2px;
}
.tip{
  margin-top: 15px;
  width: 100%;
  text-align: center;
  font-size: 14px;
  color: #6D6D6D;
}
.bind-wx-container{
  margin-top: 15px;
  height: 118px;
  margin-left: 15px;
  margin-right: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  border:1px dashed #6D6D6D;
}
.mask{
  position: absolute;
  top: 0px;
  right: 0px;
  left: 0px;
  bottom: 0px;
  background: red;
}

.bind-wx__icon{
  width: 15px;
  height: 15px;
}
.bind-wx__title{
  color: #6D6D6D;
  font-size: 15px;
  margin-left: 10px;
}


