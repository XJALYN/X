/* components/uploader/index.wxss */
.icon{
  width: 100%;
  height: 100%;
  min-width: 60px;
  min-height: 60px;
}
.uploader{
  width: 60px;
  height: 60px;
  position: relative;
}
.icon-fail{
  position: absolute;
  left:calc(50% - 10px);
  top: calc(50% - 10px);
  width: 20px;
  height: 20px;
}
.progress{
  position: absolute;
  color: white;
  background: rgba(0,0,0,0.3);
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  text-align: center;
  padding-top: 0px;
  padding-bottom: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
}