/* X/audio/audio.wxss */
.audio{
  width: 100%;
  height: 60px;
  background: rgb(250,250,250);
  display: flex;
  align-items: center;
  border:1px solid rgb(240,240,240);
}

.poster{
  margin-left: 10px;
  width: 40px;
  height: 40px;
  background: red;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20px;
}

.play-icon{
  height: 20px;
  width: 20px;
}

.stop-icon{
  height: 20px;
  width: 20px;
}

.currentTime{
  margin-left: 10px;
  font-size: 13px;
  color: rgb(150,150,150);
}

.progress{
  margin-left: 20px;
  margin-right: 20px;
  flex:1;
}

.duration{
  margin-right: 10px;
  color: rgb(150,150,150);
  font-size: 13px;
}