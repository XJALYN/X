/* X/recorder/recorder.wxss */

.recorder-container{
 width: 100vw;
 height: 100vh;
 min-height: 100vh;
 background-color: rgba(0,0,0,0.2);
 /* position: relative; */
 position: fixed;
 top: 0px;
 left: 0px;
 right: 0px;
 bottom: 0px;
}
.recorder{
  width: 100vw;
  position: absolute;
  display: flex;
  flex-direction: column-reverse;
  background: white;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  height: 200px;
  
}
.title{
  margin-top: 30px;
  font-size: 14px;
  color: rgb(150,150,150);
  text-align: center;
}
.bottom{
  margin-top: 20px;
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10px;
  align-items: center;
  position: relative;
  
}
.btn-cancle{
  margin-right: 20px;
  color: rgb(150,150,150);
  font-size: 15px;
  text-decoration: underline;
}
.btn-ok{
  margin-left: 20px;
  font-size: 15px;
  text-decoration: underline;
  color:rgb(0,171,72);
}
.circle-bg{
   width: 100px;
   height: 100px;
   display: flex;
   align-items: center;
   justify-content: center;
  position: relative;

}
.circle-img-animate{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100px;
  height: 100px;
  
}

.circle{
  width: 60px;
  height: 60px;
  border-radius:50%;
  background-color: rgb(0,171,72);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.big-small{
  animation: big 5s  linear infinite;
  -webkit-animation:big 5s  linear infinite;
  -moz-animation:big 5s linear  infinite;
  -o-animation: big 5s  linear infinite;
}


.btn-recorder{
  width: 30px;
  height: 30px;
}

.arrow{
  width: 30px;
  height: 30px;
  margin-right: 20px;
  position:absolute;
  left: 40px;
  top: 35px;
}

