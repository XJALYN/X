/* hn/wallet/balance/balance.wxss */
.top-alert{
  position: absolute;
  top: 0px;
  width: 100%;
  height: 70rpx;
  background-color: #FBE0D0;
  color: #F06F28;
  line-height: 70rpx;
  text-align: center;
}

.header{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-title{
  margin-top: 160rpx;
  font-size: 32rpx;
  color: #333333;
}
.header-balance{
  margin-top: 10rpx;
  color: #333333;
  font-size: 90rpx;
}

.btn--withdraw{
  margin-top: 250rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #333333;
  color: white;
  border-radius: 4rpx;
  width: calc(100% - 80rpx);
  font-size: 36rpx;
  text-align: center;
}
.btn--withdraw:active{
  opacity: 0.7;
}