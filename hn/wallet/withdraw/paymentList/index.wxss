.payment-list{
  position: fixed;
  top: 100vh;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.payment-list--show{
  top: 0px;
}

.payment-list__mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}


.payment-list__list{
  position: absolute;
  bottom: -730rpx;
  left: 0px;
  right: 0px;
  height: 730rpx;
  background-color: white;
  padding-left: 30rpx;
  box-sizing: border-box;
  transition: ease-in-out all 0.3s;
}
.payment-list__list--show{
   bottom: 0px;
}




.payment-list__list__top{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.list{
  height: 598rpx;
  overflow-y: scroll;
}

.payment-list__list__top__tiltle{
  height: 53rpx;
  line-height: 53rpx;
  color: #333333;
  font-size: 38rpx;
  flex: 1;
}

.payment-list__list__top__cancle{
  width: 28rpx;
  height: 28rpx;
  background: black;
  margin-right: 30rpx;
}

.payment-list__cell{
  display: flex;
  width: 100%;
  align-items: center;
  height: 120rpx;
  border-bottom: 1px solid #EEEEEE;
}
.payment-list__cell__icon{
   width: 40rpx;
   height: 40rpx;
   background: lightgray;
}
.payment-list__cell__right{
  margin-left: 20rpx;

}
.payment-list__cell__title{
  margin-top: 21rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333333;

}
.payment-list__cell__value{
  margin-top: 5rpx;
  color: #999999;
  font-size: 24rpx;
}
.payment-add{
  margin-top: 69rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.payment-add-icon{
  width: 28rpx;
  height: 28rpx;
  background-color: lightgray;
}
.payment-add-tip{
  margin-left: 26rpx;
  color: #333333;
}

