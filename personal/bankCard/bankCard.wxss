
.bank-card-container{
  margin-top: 15px;
  height: 118px;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 6px;
  width: calc(100% - 60rpx);
  background:linear-gradient(#FE8A71,#FE5163);
  position: absolute;
}

.bank-card__header{
  padding-top: 15px;
  display: flex;
  align-items: center;
}

.bank-card__header__icon{
  margin-left: 19px;
  width: 20px;
  height: 20px;
}

.bank-card__header__title{
  margin-left: 14px;
  font-size: 16px;
  color: white;
}


.bank-card__mid{
  display: flex;
  align-items: center;
  margin-top: 13px;
}
.bank-card__mid__padding--before{
  margin-left: 38rpx;
}
.bank-card__mid__list{
  display: flex;
  align-items: center;
  margin-right: 70rpx;
}



.bank-card__mid__dot{
  margin-right: 10rpx;
  
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: rgba(255,255,255,0.4);
}
.bank-card__mid__dot-last{
  margin-right: 0rpx;
}

.bank-card__mid__num2{
   font-size: 48rpx;
   color: white;
}
.bank-card__selected-icon{
  width: 68rpx;
  height: 68rpx;
  top: 0px;
  right: 0px;
  position: absolute;
}

